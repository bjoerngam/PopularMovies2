<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimaryMovie</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkMovie</item>
        <item name="colorAccent">@color/colorAccentMovie</item>
    </style>

    <style name="PopMovieTextSettings">
        <item name="android:layout_marginBottom">@dimen/padding_default_half</item>
        <item name="android:layout_marginLeft">@dimen/padding_default</item>
        <item name="android:layout_marginRight">@dimen/padding_default</item>
        <item name="android:layout_marginTop">@dimen/padding_default_half</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:textSize">@dimen/default_text_size</item>
    </style>
</resources>
